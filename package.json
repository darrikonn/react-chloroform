{
  "name": "react-chloroform",
  "version": "0.0.5",
  "description": "A framework for building forms in React applications",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darrikonn/react-chloroform.git"
  },
  "keywords": [
    "react",
    "form"
  ],
  "author": "Darri Steinn Konradsson",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "bugs": {
    "url": "https://github.com/darrikonn/react-chloroform/issues"
  },
  "homepage": "https://github.com/darrikonn/react-chloroform#readme",
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "lint": "./node_modules/.bin/eslint src test",
    "jest": "cross-env NODE_ENV=commonjs ./node_modules/.bin/jest",
    "jest:watch": "npm run jest -- --watch",
    "test": "npm run lint && npm run jest",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:commonjs:watch": "npm run build:commonjs -- --watch",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:es:watch": "npm run build:es -- --watch",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development ./node_modules/.bin/rollup src/index.js --config --sourcemap -o dist/react-chloroform.js",
    "build:umd:watch": "npm run build:umd -- --watch",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup src/index.js --config -o dist/react-chloroform.min.js",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min && npm run build:es",
    "build:watch": "echo 'build && watch the ES version of the package - for other version, run specific tasks' && npm run build:es:watch",
    "prepare": "npm run clean && npm run test && npm run build"
  },
  "jest": {
    "testRegex": "(/tests/.*\\.spec.js)$"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "immutable": "^3.8.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelrc-rollup": "^3.0.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.1.0",
    "lodash-es": "^4.17.4",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1"
  }
}
